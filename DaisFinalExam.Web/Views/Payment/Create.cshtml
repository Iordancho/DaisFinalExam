@model DaisFinalExam.Web.Models.ViewModels.Payment.CreatePaymentViewModel

@{
    ViewData["Title"] = "Създаване на плащане";
}

<h2>Създаване на плащане</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="FromAccountId" />

    <div class="mb-3">
        <label asp-for="ToAccountNumber" class="form-label">IBAN получател</label>
        <input asp-for="ToAccountNumber" class="form-control" maxlength="22" pattern="[A-Za-z0-9]{22}" />
        <span asp-validation-for="ToAccountNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Сума</label>
        <input asp-for="Amount" class="form-control" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label">Основание</label>
        <input asp-for="Reason" class="form-control" maxlength="32" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Извърши плащане</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Отказ</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
